<div class="container">
  <div class="row mt-4 ml-4">
    <h4 class="bg-light text-dark">注文履歴一覧</h4>
  </div>
  <div class="row mt-4">
    <div class='col-md-8 mx-auto'>
      <table class='table table-hover table-inversey'>
        <thead class="bg-light">
          <tr>
            <th class="text-dark">購入日時</th>
            <th class="text-dark">購入者</th>
            <th class="text-dark">注文個数</th>
            <th class="text-dark">注文ステータス</th>
          </tr>
        </thead>
        <tbody>
          <% @orders.each do |order| %>
            <tr>
              <td class="text-dark">
                <%= link_to admins_order_path(order) do %>
                  <%= l order.created_at %>
                <% end %>
              </td>
              <td class="text-dark"><%= order.customer.last_name %><%= order.customer.first_name %></td>
              <td class="text-dark"><%= order.ordered_goods.to_a.sum { |ordered_good| ordered_good.quantity } %></td>
              <td class="text-dark"><%= order.order_status %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
      <div class='container mt-5'>
        <div class='row'>
          <div class='mx-auto'>
            <p><%= paginate @orders %></p>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>