<div class="container">
  <div class="row mt-4 ml-4">
    <h4 class="bg-light text-dark">注文履歴一覧</h4>
  </div>
  <div class="row mt-4">
    <div class='col-md-8 mx-auto'>
      <table class='table table-hover table-inversey'>
        <thead class="bg-light">
          <tr>
            <th class="text-dark">購入日時</th>
            <th class="text-dark">購入者</th>
            <th class="text-dark">購入個数</th>
            <th class="text-dark">購入ステータス</th>
          </tr>
        </thead>
        <tbody>
          <% @ordered_goods.each do |ordered| %>
            <tr>
              <td class="text-dark"><%= l ordered.created_at %></td>
              <td class="text-dark"><%= ordered.orders.customer.last_name %><%= ordered.orders.customer.first_name %></td>
              <td class="text-dark"><%= ordered. quantity%></td>
              <td class="text-dark"><%= ordered.order_status %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
      <div class='container mt-5'>
        <div class='row'>
          <div class='mx-auto'>
            <p><%= paginate @ordered_goods %></p>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>