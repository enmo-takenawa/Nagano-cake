<div class="container px-5 px-sm-0 text-center">
  <div class="row mt-4 ml-4">
    <h4 class="bg-light text-dark">商品編集</h4>
  </div>
  
  <%= form_with model: @good, url:admins_good_path(@good.id), local: true do |f| %>
    <div class="form-group row">
      <%= f.label "商品画像" %>
      <%= f.attachment_field :image %>
    </div>
    <div class="form-group row">
      <%= f.label "商品名" %>
      <%= f.text_field :name %>
    </div>
    <div class="form-group row">
      <%= f.label "商品説明" %>
      <%= f.text_field :introduction %>
    </div>
    <div class="form-group row">
      <%= f.label "ジャンル" %>
      <%= f.collection_select :genre_id, @genres, :id, :name, {prompt:"--選択してください--"}, class: "form-control" %>
    </div>
    <div class="form-group row">
      <%= f.label "税抜価格" %>
      <%= f.text_field :price %><span>円</span>
    </div>
    <div class="form-group row">
      <%= f.label "販売ステータス" %>
      <%= f.radio_button :sales_status, false %>
      <%= f.label :sales_status, "販売中" %>
      <%= f.radio_button :sales_status, true  %>
      <%= f.label :sales_status, "売切れ" %>
    </div>
    <div class="form-group text-center">
      <%= f.submit "変更を保存", class:"btn btn-success" %>
    </div>
  <% end %>
</div>