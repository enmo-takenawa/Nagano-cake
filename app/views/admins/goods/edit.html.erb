<div class="container">
    <div class="row">
      <div class="">
        <h2>商品編集</h2>
      </div>
    </div>
    <%= form_with model: @good, local: true do |f| %>
      <div class="form-group row">
        <%= f.label "商品画像" %>
        <%= f.attachment_field :image %>
      </div>
      <div class="form-group row">
        <%= f.label "商品名" %>
        <%= f.text_field :name %>
      </div>
      <div class="form-group row">
        <%= f.label "商品説明" %>
        <%= f.text_field :introduction %>
      </div>
      <div class="form-group row">
        <%= f.label "ジャンル" %>
        <%= f.collection_select :genre_id, @genres.all, :id, :name, {prompt:"--選択してください--"}, class: "form-control" %>
      </div>
      <div class="form-group row">
        <%= f.label "税抜価格" %>
        <%= f.text_field :price %><span>円</span>
      </div>
      <div class="form-group row">
        <%= f.label "販売ステータス" %>
        <%= f.radio_button :sales_status, false %>
        <%= f.label :sales_status, "販売中" %>
        <%= f.radio_button :sales_status, true  %>
        <%= f.label :sales_status, "売切れ" %>
      </div>
      <div class="form-group text-center">
        <%= f.submit "変更を保存", class:"btn btn-success" %>
      </div>
    <% end %>
  </div>