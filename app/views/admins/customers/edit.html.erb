<div clas="container">
  <div class="row">
    <h2><%= @customer.last_name + @customer.first_name %>さんの会員情報編集</h2>
  </div>


  <%= form_with model: @customer, url: admins_customer_path(@customer.id), local: true do |f| %>
  
    <div class="form-grop">
      <div class="">
        会員ID
      </div>
      <div class="">
        <%= @customer.id %>
      </div>
    </div>
    
    <div class="form-group">
      <div class="">
        氏名
      </div>
      <div class="">
        <%= f.text_field :last_name, class: "" %>
        <%= f.text_field :first_name, class: "" %>
      </div>
    </div>
    
    <div class="from-group">
      <div class="">
        フリガナ
      </div>
      <div class="">
        <%= f.text_field :last_name_kana, class: "" %>
        <%= f.text_field :first_name_kana, class: "" %>
      </div>
    </div>
    
    <div class="from-group">
      <div class="">
        郵便番号
      </div>
      <div>
        <%= f.text_field :postal_code, class: "" %>
      </div>
    </div>
    
    <div class="from-group">
      <div class="">
        住所
      </div>
      <div class="">
        <%= f.text_field :address, class: "" %>
      </div>
    </div>
    
    <div class="form-group">
      <div class="">
        電話番号
      </div>
      <div class="">
        <%= f.text_field :telephone_number, class: "" %>
      </div>
    </div>
    
    <div class="form-group">
      <div class="">
        メールアドレス
      </div>
      <div class="">
        <%= f.text_field :email, class: "" %>
      </div>
    </div>
    
    <div class="form-group">
      <div class="">
        会員ステータス  
      </div>
      <div class="">
        <%= f.radio_button :is_deleted, true %>
        <%= f.label :is_deleted, "有効" %>
        <%= f.radio_button :is_deleted, false  %>
        <%= f.label :is_deleted, "退会" %>
      </div>
    </div>
    
    <div class="row">
      <%= f.submit "変更を保存", class: "btn btn-success" %>
    </div>
  <% end %>
</div>

