<div clas="container">
  <div class="row">
    <h2><%= @customer.last_name + @customer.first_name %>さんの会員情報編集</h2>
  </div>


<%= form_with model: @customer do |f| %>

<div class="form-grop">
  <div class="">
    会員ID
  </div>
  <div class="">
    <%= f.id %>
  </div>
</div>
<div class="form-group">
    <%= f.label :氏名, class: "" %>
    <div class="row">
        <%= f.text_field :first_name %>
        <%= f.text_field :last_name %>
    </div>
</div>

<div class="from-group">
     <% f.label :カナ, class: "" %>
    <div class="row">
        <%= f.text_field :first_name_kana %>
        <%= f.text_field :last_name_kana %>
    </div>
</div>

<div class="from-group">
    <%= f.label :郵便番号, class: "" %>
    <%= f.text_field :postal_code %>
    </div>
    
<div class="from-group">
    <%= f.label :住所, class: "" %>
    <%= f.text_field :address %>
</div>

<div class="form-group">
    <%= f.label :電話番号, class: "" %>
    <%= f.text_field :telephone_number %>
</div>

<div class="form-group">
    <%= f.label :メールアドレス, class: "" %>
    <%= f.text_field :email %>
</div>

<div class="form-group"></div>

<div class="row">
    <%= f.submit "変更内容を保存", class: "btn btn-primary" %>
</div>
<% end %>
</div>
</div>
