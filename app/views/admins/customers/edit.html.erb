<div clas="container">
  <div class="row mt-4 ml-5">
    <h4 class="bg-light text-dark ml-5"><%= @customer.last_name + @customer.first_name %>さんの会員情報編集</h4>
  </div>
  <div class="row mt-4">
    <div class='col-md-5 mx-auto'>
      <%= form_with model: @customer, url: admins_customer_path(@customer.id), local: true do |f| %>
        <table>
          <tr>
            <th class="text-dark" width="150" height="50">会員ID</th>
            <td><%= @customer.id %></td>
          </tr>
          <tr>
            <th class="text-dark" height="50">氏名</th>
            <td>
              <%= f.text_field :last_name %>
              <%= f.text_field :first_name %>
            </td>
          </tr>
          <tr>
            <th class="text-dark" height="50">フリガナ</th>
            <td>
              <%= f.text_field :last_name_kana %>
              <%= f.text_field :first_name_kana %>
            </td>
          </tr>
          <tr>
            <th class="text-dark" height="50">郵便番号</th>
            <td><%= f.text_field :postal_code %></td>
          </tr>
          <tr>
            <th class="text-dark" height="50">住所</th>
            <td><%= f.text_field :address %></td>
          </tr>
          <tr>
            <th class="text-dark" height="50">電話番号</th>
            <td><%= f.text_field :telephone_number %></td>
          </tr>
          <tr>
            <th class="text-dark" height="50">メールアドレス</th>
            <td><%= f.text_field :email %></td>
          </tr>
          <tr>
            <th class="text-dark" height="50">会員ステータス</th>
            <td>
              <%= f.radio_button :is_deleted, true %>
              <%= f.label :is_deleted, "有効" %>
              <%= f.radio_button :is_deleted, false  %>
              <%= f.label :is_deleted, "退会" %>
            </td>
          </tr>
        </table>
        <div class="form-group text-center mr-5">
          <%= f.submit "変更を保存", class: "btn btn-success" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
