<div class="container">
  <div class="row">
    <h2><%= @customer.last_name + @customer.first_name %>さんの会員詳細</h2>
  </div>

<!--///////////////////会員情報///////////////////-->
  <div class="">
    <div class="">
      会員ID
    </div>
    <div class="">
      <%= @customer.id %>
    </div>
  </div>
  <div class="">
    <div class="">
      氏名
    </div>
    <div class="">
      <%= @customer.last_name + " " + @customer.first_name %>
    </div>
  </div>
  <div class="">
    <div class="">
      フリガナ
    </div>
    <div class="">
      <%= @customer.last_name_kana + " " + @customer.first_name_kana %>
    </div>
  </div>
  <div class="">
    <div class="">
      郵便番号
    </div>
    <div class="">
      <%= @customer.postal_code %>
    </div>
  </div>
  <div class="">
    <div class="">
      住所
    </div>
    <div class="">
      <%= @customer.address %>
    </div>
  </div>
  <div class="">
    <div class="">
      電話番号
    </div>
    <div class="">
      <%= @customer.telephone_number %>
    </div>
  </div>
  <div class="">
    <div class="">
      メールアドレス
    </div>
    <div class="">
      <%= @customer.email %>
    </div>
  </div>
  <div class="">
    <div class="">
      会員ステータス
    </div>
    <% if @customer.is_deleted == true %>
      <div class="text-success">有効</div>
    <% else %>
      <div class="text-success">退会</div>
    <% end %>
    </div>
  </div>

  <!--///////////////////ボタン//////////////////-->
  <div class="">
    <div class="">
      <%= link_to "編集する", edit_admins_customer_path, class="btn btn-success" %>
    </div>
    <div class="">
      <%= link_to "注文履歴一覧を見る", admins_orders_path, class="btn btn-primary" %>
      <!--仮で全ユーザーの注文一覧画面遷移パス書いてます-->
    </div>
  </div>
</div>