<div class="container">
  <div class="row mt-4 ml-4">
    <h4 class="bg-light text-dark"><%= @customer.last_name + @customer.first_name %>さんの会員詳細</h4>
  </div>

<!--///////////////////会員情報///////////////////-->
  <div class="row">
    <div class="col-m-3">
      <table class="mt-4">
        <tr>
          <th class="text-dark">会員ID</th>
          <td class="text-dark"><%= @customer.id %></td>
        </tr>
        <tr>
          </div>
          <th class="text-dark">氏名</th>
          <td class="text-dark"><%= @customer.last_name + " " + @customer.first_name %></td>
        </tr>
        <tr>
          <th class="text-dark">フリガナ</th>
          <td class="text-dark"><%= @customer.last_name_kana + " " + @customer.first_name_kana %></td>
        </tr>
        <tr>
          <th class="text-dark">郵便番号</th>
          <td class="text-dark"><%= @customer.postal_code %></td>
        </tr>
        <tr>
          <th class="text-dark">住所</th>
          <td class="text-dark"><%= @customer.address %></td>
        </tr>
        <tr>
          <th class="text-dark">電話番号</th>
          <td class="text-dark"><%= @customer.telephone_number %></td>
        </tr>
        <tr>
          <th class="text-dark">メールアドレス</th>
          <td class="text-dark"><%= @customer.email %></td>
        </tr>
        <tr>
          <th class="text-dark">会員ステータス</th>
          <td>
            <% if @customer.is_deleted == true %>
              <div class="text-success">有効</div>
            <% else %>
              <div class="text-secondary">退会</div>
            <% end %>
          </td>
        </tr>
      </table>
    </div>
  </div>
  <!--///////////////////ボタン//////////////////-->
  <div class="row ml-5">
    <div class="m-3">
      <%= link_to "編集", edit_admins_customer_path(@customer.id), class: "btn btn-sm btn-success" %>
    </div>
    <div class="m-3">
      <%= link_to "注文履歴一覧を見る", admins_orders_path, class: "btn btn-sm btn-primary" %>
      <!--仮で全ユーザーの注文一覧画面遷移パス書いてます-->
    </div>
  </div>
</div>