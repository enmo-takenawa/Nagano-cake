<div class="container">
    <h2 class="mt-1">ジャンル一覧・追加</h2>
    <%= form_with model: @genre, url: admins_genres_path, local:true do |f| %>
        <div class="form-group row">
            <%= f.label "ジャンル名" %>
            <%= f.text_field :name %>
            <%= f.submit "新規登録", class:"btn btn-success" %>
        </div>
    <% end %>

    <table class="table">
        <thead>
            <tr>
                <th>ジャンル</th>
            </tr>
        </thead>
        <tbody>
            <% @genres.each do |genre| %>
                <tr>
                    <td><%= genre.name %></td>
                    <td><%= link_to "編集", edit_admins_genre_path(genre.id), class: "btn btn-sm btn-success" %></td>
                </tr>
            <% end %>
        </tbody>
    </table>
</div>