<div class="container">
  <div class="row">
    <h1>ジャンル変更</h1>
  </div>
    <%= form_with model:@genre, url:admins_genre_path(@genre.id), local: true do |f| %>
      <div class="form-group row">
        <%= f.label "ジャンル名" %>
        <%= f.text_field :name %>
        <%= f.submit "変更を保存", class:"btn btn-success" %>
      </div>
    <% end %>
</div>