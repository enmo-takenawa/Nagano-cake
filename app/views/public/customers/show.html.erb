<div class="container">
	<h2>マイページ</h2>
	<div class="row">
		<h4>登録情報</h4>
		<%= link_to "編集する",edit_customer_path(@customer),class: "btn btn-success m-2 ml-auto" %>
			 <table class="table table-bordered">
	        <tr class="border border-dark">
	            <th>氏名</th>
			    	<td>
			    		<%= @customer.last_name %>
			    		<%= @customer.first_name %>
			    	</td>
		      </tr>
	
		      <tr class="border border-dark">
			    	<th>フリガナ</th>
			    	<td>
			    		<%= @customer.last_name_kana %>
			    		<%= @customer.first_name_kana %>
		    		</td>
		      </tr>
	
		      <tr class="border border-dark">
			    	<th>郵便番号</th>
			    	<td><%= @customer.postal_code %></td>
		      </tr>
	
		      <tr class="border border-dark">
			    	<th>住所</th>
			    	<td><%= @customer.address %></td>
		      </tr>
	
		      <tr class="border border-dark">
			    	<th>電話番号</th>
			    	<td><%= @customer.telephone_number %></td>
		      </tr>
	
		      <tr class="border border-dark">
		    		<th>メールアドレス</th>
		        <td><%= @customer.email %></td>
		      </tr>
	    </table>
	</div>
		
	<div>
		配送先　
		<%= link_to "一覧を見る", shipping_address_path, class: "btn btn-primary btn-sm m-1" %>
	</div>
	<div>
		注文履歴
		<%= link_to "一覧を見る", orders_path, class: "btn btn-primary btn-sm m-1" %>
	</div>
		
</div>