<div class="container">
	<div class="row">
		<!--<div class="offset-1">-->
			<h3 class="red-border m-4">マイページ</h3>
		<!--</div>-->

  </div>

  <div>
  	登録情報
		<%= link_to "編集する",edit_customer_path(@customer),class: "btn btn-success m-2 ml-auto" %>
  </div>

	<div class="row mt-3">
			 <table class="table table-bordered">
	        <tr class="border border-dark">
	          <th class="bg-light text-dark">氏名</th>
			    	<td class="text-dark">
			    		<%= @customer.last_name %>
			    		<%= @customer.first_name %>
			    	</td>
		      </tr>

		      <tr class="border border-dark">
			    	<th class="bg-light text-dark">フリガナ</th>
			    	<td class="text-dark">
			    		<%= @customer.last_name_kana %>
			    		<%= @customer.first_name_kana %>
		    		</td>
		      </tr>

		      <tr class="border border-dark">
			    	<th class="bg-light text-dark">郵便番号</th>
			    	<td class="text-dark"><%= @customer.postal_code %></td>
		      </tr>

		      <tr class="border border-dark">
			    	<th class="bg-light text-dark">住所</th>
			    	<td class="text-dark"><%= @customer.address %></td>
		      </tr>

		      <tr class="border border-dark">
			    	<th class="bg-light text-dark">電話番号</th>
			    	<td class="text-dark"><%= @customer.telephone_number %></td>
		      </tr>

		      <tr class="border border-dark">
		    		<th class="bg-light text-dark">メールアドレス</th>
		        <td class="text-dark"><%= @customer.email %></td>
		      </tr>
	    </table>
	</div>

	<div class="text-dark">
		配送先
		<%= link_to "一覧を見る", shipping_address_path, class: "btn btn-primary btn-sm m-1" %>
	</div>
	<div class="text-dark">
		注文履歴
		<%= link_to "一覧を見る", orders_path, class: "btn btn-primary btn-sm m-1" %>
	</div>

</div>