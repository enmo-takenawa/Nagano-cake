<div class="camtaomer my-5">
    <div class="row">
        <div class="offset-1">
            <h3 style="background-color:#EEEEEE">会員情報編集</h3>
        </div>
    </div>
    <div class="row my-3">
        <div class="offset-3 col-6">
            <%= form_with model: @customer do |f| %>
    
    <div class="form-group">
            <div class="row">
                <div class="col-sm-2">
            <%= f.label :氏名 %></div>
            <%= f.text_field :last_name, class: "form-control offset-1 col-3" %>
            <%= f.text_field :first_name, class: "form-control offset-1 col-3" %>
        </div>
    </div>
    
    <div class="form-group">
            <div class="row">
                <div class="col-sm-2">
            <%= f.label :フリガナ %></div>
            <%= f.text_field :last_name_kana, class: "form-control offset-1 col-3" %>
            <%= f.text_field :first_name_kana, class: "form-control offset-1 col-3" %>
        </div>
    </div>
    
    <div class="form-group">
        <div class="row">
            <div class="col-sm-2">
        <%= f.label :郵便番号 %></div>
        <%= f.text_field :postal_code, class: "form-control offset-1 col-3" %>
        </div>
    </div>
        
    <div class="form-group">
        <div class="row">
            <div class="col-sm-2">
        <%= f.label :住所 %></div>
        <%= f.text_field :address, class: "form-control offset-1 col-9" %>
        </div>
    </div>
    
    <div class="form-group">
        <div class="row">
            <div class="col-sm-2">
        <%= f.label :電話番号 %></div>
        <%= f.text_field :telephone_number, class: "form-control offset-1 col-3" %>
        </div>
    </div>
    
    <div class="form-group">
        <div class="row">
            <div class="col-sm-2">
        <%= f.label :メールアドレス %></div>
        <%= f.text_field :email, class: "form-control offset-1 col-3" %>
        </div>
    </div>
    
    <div class="row">
        <%= f.submit "変更内容を保存", class: "btn btn-success" %>
        <%= link_to "退会する" , unsubscribe_customer_path(@customer), class: "btn btn-danger offset-1" %>
    </div>
    <% end %>
    </div>  
    </div>
</div>