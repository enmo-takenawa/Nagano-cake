<%#配送先編集ページ%>
<div class="container my-5">
    <div class="row">
        <div class="offset-1">
            <h3 class="red-border bg-light px-3 pd-1">配送先編集</h3>
        </div>
    </div>
    <div class="row my-3">
        <div class="form-group col-10">
        <%= form_with model: @shipping_address do |f| %>
        
            <div class="form-group">
                    <div class="row">
                        <div class="col-sm-3">
                            <%= f.label :郵便番号（ハイフンなし）%></div>
                            <%= f.text_field :shipping_postal_code, class: "form-control offset-1 col-3" %>
                    </div>
            </div>
            
            <div class="form-group">
                    <div class="row">
                        <div class="col-sm-3">
                            <%= f.label :住所 %></div>
                            <%= f.text_field :shipping_address, class: "form-control offset-1 col-6" %>
                    </div>
            </div>
            
            <div class="form-group">
                    <div class="row">
                        <div class="col-sm-3">
                            <%= f.label :宛名 %></div>
                            <%= f.text_field :name, class: "form-control offset-1 col-3" %>
                            <%= f.submit "変更内容を保存", class: "btn btn-success offset-3" %>
                    </div>
            </div>
        <% end %>
        </div>
    </div>
</div>