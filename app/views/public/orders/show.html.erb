<%#注文履歴詳細ページ%>
<div class="container">
    <h2>注文履歴詳細</h2>
    
    <div class="row">
    <%#注文情報////////////////////////////////////////////////////////////////////////////////////%>
        <div class="col-8">
            <h4>注文情報</h4>
            <table class="table table-bordered">
                <tr>
                    <th>注文日</th>
                    <td><%= @order.created_at.strftime("%Y/%m/%d") %></td>
                </tr>
                <tr>
                    <th>配送先</th>
                    <td>
                         <%= "〒" + @order.shipping_postal_code %></br>
                        <%= @order.shipping_address %></br>
                        <%= @order.shipping_name %>
                    </td>
                </tr>
                <tr>
                    <th>支払い方法</th>
                    <td><%= @order.payment_method %></td>
                </tr>
                <tr>
                    <th>ステータス</th>
                    <td><%= @order.order_status %></td>
                </tr>
            </table>
        </div>
        
    <%#請求情報////////////////////////////////////////////////////////////////////////////////////%>
        <div class="col-4">
            <h4>請求情報</h4>
            <table class="table table-bordered">
                <tr class="border">
                <th>商品合計</th>
                <td><%= @order.total_price %></td>
            </tr>
            
            <tr class="border">
                <th>配送料</th>
                <td><%= @order.shipping_fee %></td>
            </tr>
            
            <tr class="border">
                <th>ご請求額</th>
                <td><%= @order.total_price + @order.shipping_fee %></td>
            </tr>
            </table>
        </div>
    </div>
    

    <%#注文内容////////////////////////////////////////////////////////////////////////////////////%>
    <div class="row">
        <h4>注文内容</h4>
        <table class = "table table-bordered">
            <thead>
                <tr class = "border">
                    <th>商品</th>
                    <th>単価（税込）</th>
                    <th>個数</th>
                    <th>小計</th>
                </tr>
            </thead>
            <% @order.ordered_goods.each do |ordered_good| %>
            <tbody>
                <tr class = "border">
                    <td><%= ordered_good.good.name %></td>
                    <td><%= ordered_good.price %></td>
                    <td><%= ordered_good.quantity %></td>
                    <td><%= ordered_good.price * ordered_good.quantity %></td>
                </tr>
            </tbody>
            <% end %>
        </table>
    </div>
    
    <%= link_to "注文履歴一覧へ戻る", orders_path %>
    
</div>