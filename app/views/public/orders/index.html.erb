<%#注文履歴詳細ページ%>
<div class="container">
    <h1>注文履歴一覧</h1>
    <div class="row">
        <div class="container-fluid">
            <table class="table table-bordered">
                <thead>
                <td>注文日</td>
                <td>配送先</td>
                <td>注文商品</td>
                <td>支払金額</td>
                <td>ステータス</td>
                <td>注文詳細</td>
                </thead>
    
                <%#ここから履歴の数字とかを入れるための記述%>
                <tbody>
                    <% @orders.each do |order| %>
                    <tr class="border border-dark">
                        <%#注文日%>
                        <td class="text-center">
                            <%= order.created_at.strftime("%Y/%m/%d") %>
                        </td>
    
                        
                        <%#配送先%>
                        <td class="text-center">
                            <%= "〒" + order.shipping_postal_code %></br>
                            <%= order.shipping_address %></br>
                            <%= order.shipping_name %>
                        </td>
                        
                        <td class="text-center">
                            <% order.ordered_goods.each do |ordered_good| %>
                                <%= ordered_good.good.name %></br>
                            <% end %>
                        </td>
                        
                        <td class="text-center"><%= order.total_price %>円</td>
    
                        <td class="text-center"><%= order.order_status %></td>
    
                        <td class="text-center"><%=link_to "表示する",order_path(order), class: "btn btn-primary" %></td>
    
                    </tr>
                    <% end %>
                </tbody>
            </table>
         </div>
    </div>
</div>