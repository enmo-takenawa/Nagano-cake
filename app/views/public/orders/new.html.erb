<div class="container">
  <div class="row">
    <div class="col-md-3 mt-5 m-4 px-4 py-1 text-center">
      <h2 class="bg-light text-dark">注文情報入力</h2>
    </div>
  </div>

  <%= form_with model: @order, url: confirmation_orders_path, method: :post, local: true do |f| %>
    <div class="">
      <h4 class="text-dark">支払い方法</h4>
    </div>
    <div class="m-1 ml-5">
      <%= f.hidden_field :cutomer_id, value: current_customer.id %>
      <%= f.radio_button :payment_method, :クレジットカード, checked: "checked"  %>
      <%= f.label :payment_method, "クレジットカード" %>
    </div>
    <div class="m1 ml-5">
      <%= f.radio_button :payment_method, :銀行振込 %>
      <%= f.label :payment_method, "銀行振込" %>
    </div>
    <div class="mt-3">
      <h4 class="text-dark">お届け先</h4>
    </div>

    <div class="m-1 ml-5">
      <%= radio_button_tag :address, "1", checked: true %>
      <%= label_tag :address, "ご自身の住所",{value: :"1"} %>
      <div class="ml-3">〒<%= current_customer.postal_code + " " + current_customer.address %></div>
      <div clas="ml-3"><%= current_customer.last_name + current_customer.first_name %></div>
    </div>

    <div class="m-1 ml-5 mt-3">
      <%= radio_button_tag :address, "2" %>
      <%= label_tag :address, "登録済みの住所から選択", {value: :"2"} %>
      <%= f.collection_select :address_id, @addresses, :id, :shipping_address %>
    </div>

    <div class="m-1 ml-5 mt-3">
      <%= radio_button_tag :address, "3" %>
      <%= label_tag :address, "新しいお届け先", {value: :"3"} %>

      <div class="row my-1">
        <div class="col-md-3 ml-3">
          <%= "郵便番号（ハイフンなし）" %>
        </div>
        <div class="col-md-3">
          <%= text_field_tag :shipping_postal_code, nil, placeholder: "0000000", class: "" %>
        </div>
      </div>

      <div class="row my-1">
        <div class="col-md-3 ml-3">
          <%= label_tag "住所" %>
        </div>
        <div class="col-md-3">
          <%= text_field_tag :shipping_address, nil, placeholder: "東京都渋谷区代々木神園町0-0", class: "" %>
        </div>
      </div>

      <div class="row my-1">
        <div class="col-md-3 ml-3">
          <%= label_tag "宛先" %>
        </div>
        <div class="col-md-3">
          <%= text_field_tag :shipping_name, nil, placeholder: "令和道子" %>
        </div>
      </div>
    </div>

    <div class="row my-5">
      <div class="col-md-12 text-center">
        <%= f.submit "確認画面に進む", class: "btn btn-primary" %>
      </div>
    </div>
  <% end %>
</div>
