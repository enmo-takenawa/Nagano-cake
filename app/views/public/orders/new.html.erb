<%= form_with model: @order, url: confirmation_orders_path, method: :post, local: true do |f| %>
    <%= f.hidden_field :cutomer_id, value: current_customer.id %>
    <%= f.radio_button :payment_method, :クレジットカード, checked: "checked" %>
    <%= f.label :payment_method, "クレジットカード" %>
    <%= f.radio_button :payment_method, :銀行振込 %>
    <%= f.label :payment_method, "銀行振込" %>
    <%= radio_button_tag :address, "1" %>
    <%= label_tag :address, "ご自身の住所",{value: :"1"} %>
  　〒<%= current_customer.postal_code + " " + current_customer.address %>
    <%= current_customer.last_name + current_customer.first_name %></div>
    <%= radio_button_tag :address, "2" %>
    <%= label_tag :address, "登録済みの住所から選択", {value: :"2"} %>
    <%= f.collection_select :address_id, @addresses, :id, :shipping_address %>
    <%= radio_button_tag :address, "3" %>
    <%= label_tag :address, "新しいお届け先", {value: :"3"} %>
    <%= "郵便番号（ハイフンなし）" %>
    <%= text_field_tag :shipping_postal_code, nil, placeholder: "0000000", class: "" %>
    <%= label_tag "住所" %>
    <%= text_field_tag :shipping_address, nil, placeholder: "東京都渋谷区代々木神園町0-0", class: "" %>
    <%= label_tag "宛先" %>
    <%= text_field_tag :shipping_name, nil, placeholder: "令和道子" %>
    <%= f.submit "確認画面に進む", class: "btn btn-primary" %>
<% end %>

