<h2>注文情報入力</h2>

<%= form_with model: @order, url: confirmation_orders_path, local: true do |f| %>
  <h5>支払い方法</h5>
    <%= f.radio_button :payment_method, :クレジットカード, checked: "checked" %>
    <%= f.label :payment_method, "クレジットカード" %>
      
    <%= f.radio_button :payment_method, :銀行振込 %>
    <%= f.label :payment_method, "銀行振込" %>
  
  
  <h5>お届け先</h5>
    <%= radio_button_tag :shipping_address, "1" %>
    <%= label_tag :shipping_address, "ご自身の住所",{value: :"1"} %>
    <p><%= "郵便番号" + current_customer.postal_code + current_customer.shipping_address + current_customer.last_name + current_customer.first_name %></p>
    
    <%= radio_button_tag :shipping_address, "2" %>
    <%= label_tag :shipping_address, "登録済みの住所から選択", {value: :"2"} %>
    <%= f.collection_select :select_address, @address, :id, :shipping_address %>
    
    <%= radio_button_tag :shipping_address, "3" %>
    <%= label_tag :shipping_address, "新しいお届け先", {value: :"3"} %>
    <%= "郵便番号（ハイフンなし）" %><%= text_field_tag 'shipping_address[shipping_postal_code]' %>
    <%= "住所" %><%= text_field_tag 'shipping_address[shipping_address]' %>
    <%= "宛名" %><%= text_field_tag 'shipping_address[name]' %>
    
    <%= f.submit "確認画面に進む"%>
    
<% end %>

