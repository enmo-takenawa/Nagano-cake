<h2>新規会員登録</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "customers/shared/error_messages", resource: resource %>
  
  <div class="field">
    <%= f.label :last_name, '（姓）' %>
    <%= f.text_field :last_name, autofocus: true, placeholder: "長野" %>
  </div>
  
  <div class="field">
    <%= f.label :first_name, '（名）' %>
    <%= f.text_field :first_name, placeholder: "花子" %>
  </div>
  
  <div class="field">
    <%= f.label :last_name_kana, '（セイ）' %>
    <%= f.text_field :last_name_kana, placeholder: "ナガノ" %>
  </div>
  
  <div class="field">
    <%= f.label :first_name_kana, '(メイ)' %>
    <%= f.text_field :first_name_kana, placeholder: "ハナコ" %>
  </div>
  
  <div class="field">
    <%= f.label :email, 'メールアドレス' %>
    <%= f.email_field :email, autocomplete: "email" %>
  </div>
  
  <div class="field">
    <%= f.label :postal_code, '郵便番号（ハイフンなし）' %>
    <%= f.text_field :postal_code, placeholder: "0000000" %>
  </div>
  
  <div class="field">
    <%= f.label :address, '住所' %>
    <%= f.text_field :address, placeholder: "東京都渋谷区代々木神園町0-0" %>
  </div>
  
  <div class="field">
    <%= f.label :telephone_number, '電話番号（ハイフンなし）' %>
    <%= f.text_field :telephone_number, placeholder: "0000000000" %>
  </div>

  <div class="field">
    <%= f.label :password, 'パスワード（6文字以上）' %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %>
    <%= f.password_field :password, autocomplete: "new-password" %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation, 'パスワード（確認用）' %>
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>

  <div class="actions">
    <%= f.submit "新規登録" %>
  </div>
<% end %>

<h2>既に登録済みの方</h2>
<%= link_to "こちら", new_customer_session_path %>　からログインしてください。
