<div class="container">
  <h2 class="ml-3 my-3">新規会員登録</h2>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= render "customers/shared/error_messages", resource: resource %>
    
    <div class="row my-2">
      <div class="col-3">名前</div>
      <div class="field col-3">
        <%= f.label :last_name, '（姓）　' %>
        <%= f.text_field :last_name, autofocus: true, placeholder: "長野" %>
      </div>
      
      <div class="field col-3">
        <%= f.label :first_name, '（名）　' %>
        <%= f.text_field :first_name, placeholder: "花子" %>
      </div>
    </div>
    
    <div class="row my-2">
      <div class="col-3">フリガナ</div>
      <div class="field col-3">
        <%= f.label :last_name_kana, '（セイ）' %>
        <%= f.text_field :last_name_kana, placeholder: "ナガノ" %>
      </div>
      
      <div class="field col-3">
        <%= f.label :first_name_kana, '（メイ）' %>
        <%= f.text_field :first_name_kana, placeholder: "ハナコ" %>
      </div>
    </div>
    
    <div class="row my-2">
      <div class="col-3">メールアドレス</div>
      <div class="field col-3">
        <%= f.email_field :email, size: 28.5, autocomplete: "email" %>
      </div>
    </div>
    
    <div class="row my-2">
      <div class="col-3">郵便番号（ハイフンなし）</div>
      <div class="field col-3">
        <%= f.text_field :postal_code, size: 28.5, placeholder: "0000000" %>
      </div>
    </div>
    
    <div class="row my-2">
      <div class="col-3">住所</div>
      <div class="field col-3">
        <%= f.text_field :address, size: 64, placeholder: "東京都渋谷区代々木神園町0-0" %>
      </div>
    </div>
    
    <div class="row my-2">
      <div class="col-3">電話番号（ハイフンなし）</div>
      <div class="field col-3">
        <%= f.text_field :telephone_number, size: 28.5, placeholder: "0120002222" %>
      </div>
  
    </div>
    
    <div class="row my-2">
      <div class="col-3">パスワード（6文字以上）</div>
      <div class="field col-3">
        <% if @minimum_password_length %>
        <% end %>
        <%= f.password_field :password, size: 28.5, autocomplete: "new-password" %>
      </div>
    </div>
  
    <div class="row my-2">
      <div class="col-3">パスワード（確認用）</div>
      <div class="field col-3">
        <%= f.password_field :password_confirmation, size: 28.5, autocomplete: "new-password" %>
      </div>
    </div>
  
    <div class="row">
        <%= f.submit "新規登録", class: "btn btn-success mx-auto m-4" %>
    </div>
  <% end %>
  
  <h2 class="ml-3">既に登録済みの方</h2>
  <div class="col-4 text-center">
    <%= link_to "こちら", new_customer_session_path %>からログインしてください。
  </div>

</div>