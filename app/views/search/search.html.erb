  <main>
    <div class="container">
      <div class="row">
        <h3 class="page_title mx-auto">商品一覧</h3><p>（全<%= @datas.count %>件）</p>
      </div>

      <div class="row">
        <div clas="col-lg-12">
          <div class="d-flex flex-wrap bd-highlight mb-3">
              <% @datas.each do |data| %>
                <div class="col-sm-6 col-md-4 col-lg-3">
                  <%= link_to good_path(data.id) do %>
                    <%= attachment_image_tag(data, :image, fallback: "no_image.jpeg", size:'200x150') %>
                    <div>
                      <h5><%=  data.name %></h5>
                      <p>￥<%= data.price %></p>
                    </div>
                  <% end %>
                  <%= data.sales_status ? "売切れ" : "販売中" %>
                </div>
              <% end %>
          </div>
        </div>
      </div>
    </div>
  </main>


