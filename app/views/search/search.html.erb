<main>
<div class="container">
  <div class="row">
    <div class="col-lg-2 text-center">
      <%= render 'public/goods/genre', genres: @genres %>
    </div>
    <div class="col-lg-10">
      <h3 class="text-dark"> <%= @genre.name %> 一覧</h3>
      <% if @datas.empty? %>
        <h4>商品準備中</h4>
      <% end %>
      <div class="d-flex flex-wrap bd-highlight mb-3">
        <% @datas.each do |data| %>
          <div class="col-sm-6 col-mb-4 col-lg-3">
            <%= link_to good_path(data.id) do %>
              <!--<div class="products-index-item-image mb-2">-->
                <%= attachment_image_tag data, :image, format: "jpeg", fallback: "no_image.jpg", class:"col-12 p-0" %>
              <!--</div>-->
            <% end %>
            <h5 class="text-dark"><%= data.name %></h5>
            <p>¥ <%= data.price %></p>
          </div>
        <% end %>
      </div>
      <div class="pagenationc col-7 mx-auto">
      </div>
    </div>
    <div class="col-1 mb-4"></div>
  </div>
</div>
</main>
